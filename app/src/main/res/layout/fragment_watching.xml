<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".view.pandaliveview.fragment.WatchingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pannalive_et"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="7"
            android:background="@drawable/editshape"
            android:hint="添加评论..."/>
        <Button
            android:id="@+id/pannalive_insert"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="3"
            android:hint="发送"
            android:textSize="20sp"
            android:background="#505fe2"/>
    </LinearLayout>
    <com.jwenfeng.library.pulltorefresh.PullToRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pandalive_watchpull"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pandalive_wachRec"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </com.jwenfeng.library.pulltorefresh.PullToRefreshLayout>
</LinearLayout>