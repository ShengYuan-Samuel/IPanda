<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/image_homelive_view"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="5dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/textview_homelive_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_homelive_view"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="四个熊孩抢奶吃" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:background="@mipmap/default_time_view"
        android:layout_alignBottom="@+id/image_homelive_view">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/lpanda_live_layer" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Live"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center_vertical"
           />
    </LinearLayout>

</RelativeLayout>
